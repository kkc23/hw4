<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<% for post in @posts %>
<div class="col-md-3 col-sm-6">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
</div>
<% end %>

<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>&user_id=<%= session["user_id"] %>">New Post</a>
</p>

<p>
  <a class="btn btn-primary" href="/places">Back to All Places</a>
</p>